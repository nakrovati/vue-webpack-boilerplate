{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-essential", "prettier"],
  "parserOptions": {
    "ecmaVersion": 11,
    "sourceType": "module"
  },
  "rules": {
    "arrow-body-style": "off",
    "comma-dangle": ["error", "always-multiline"],
    "max-len": ["error", { "code": 80 }],
    "no-undef": "error",
    "no-var": "error",
    "prefer-arrow-callback": "off",
    "quotes": ["error", "double", { "avoidEscape": true }],
    "semi": "error"
  }
}
