{
  "name": "vue-webpack-boilerplate",
  "version": "1.0.3",
  "description": "",
  "main": "src/main.js",
  "scripts": {
    "dev": "webpack serve --config webpack.dev.js",
    "watch": "webpack serve --config webpack.dev.js --watch",
    "build": "webpack --config webpack.prod.js --progress",
    "build:stats": "webpack --config webpack.prod.js --progress --profile --json=stats.json",
    "build:report": "webpack-bundle-analyzer stats.json dist",
    "lint": "npm run lint:code && npm run lint:styles",
    "lint:code": "eslint --ext .js,.vue --fix",
    "lint:styles": "stylelint **/*.{css,scss,html,vue} --fix",
    "format": "prettier --write ."
  },
  "author": "nakrovati <nakrovati@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nakrovati/vue-webpack-boilerplate.git"
  },
  "homepage": "https://github.com/nakrovati/vue-webpack-boilerplate#readme",
  "keywords": [
    "vue",
    "spa",
    "webpack",
    "frontend",
    "boilerplate"
  ],
  "license": "ISC",
  "dependencies": {
    "core-js": "^3.21.1",
    "vue": "^3.2.26",
    "vue-router": "^4.0.12",
    "vuex": "^4.0.2"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.8",
    "@vue/compiler-sfc": "^3.2.26",
    "@vue/test-utils": "^2.0.0-rc.17",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.5.0",
    "eslint": "^8.6.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "html-loader": "^3.1.0",
    "html-webpack-plugin": "^5.5.0",
    "mini-css-extract-plugin": "^2.4.6",
    "postcss": "^8.4.5",
    "postcss-csso": "^6.0.0",
    "postcss-html": "^1.3.0",
    "postcss-loader": "^6.2.1",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "sass": "^1.47.0",
    "sass-loader": "^12.4.0",
    "style-loader": "^3.3.1",
    "stylelint": "^14.2.0",
    "stylelint-config-html": "^1.0.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-declaration-block-no-ignored-properties": "^2.5.0",
    "svgo-loader": "^3.0.0",
    "vue-loader": "^17.0.0",
    "webpack": "^5.65.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.7.2",
    "webpack-merge": "^5.8.0"
  }
}
